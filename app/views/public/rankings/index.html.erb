<!--------- TOP10（ランキング）投稿 ------------>
<div class="container">
  <% breadcrumb :popular_posts %>
  <p class="btn-sticky m-2">RANKING</p>
  <div class="mx-auto">
    <h3 class="text-center">ランキング</h3>
  </div>

  <div class="row">
    <% @post_ranks.each.with_index(1) do |post_rank, i| %>
      <div class="col-12 col-lg-3 col-md-4 col-sm-6">
        <div class="card text-center shadow bg-white rounded my-2">
          <div class="card-header">
            NO. <%= i %>
          </div>
          <%= link_to post_path(post_rank) do %>
            <%= attachment_image_tag post_rank, :post_image, :fill, 150, 150, format: 'jpeg', class: "post_img p-2" %>
          <% end %>
          <%= link_to post_rank.title, post_path(post_rank), class: 'card-text text-wrap' %>
          <p class='mr-1 mt-2 mb-2'>by
            <%= link_to post_rank.user.name, user_path(post_rank.user), class: 'card-text text-wrap' %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>