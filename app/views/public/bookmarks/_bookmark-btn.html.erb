<% unless bookmark_post.user_id == current_user.id %>
  <% if bookmark_post.bookmarked_by?(current_user) %>
    <%= link_to post_bookmarks_path(bookmark_post), method: :delete, remote: true, class: "bookmark_btn" do %>
      ★<%= bookmark_post.bookmarks.count %> ブックマーク
    <% end %>
  <% else %>
    <%= link_to post_bookmarks_path(bookmark_post), method: :post, remote: true, class: "bookmark_btn" do %>
      ☆<%= bookmark_post.bookmarks.count %> ブックマーク
    <% end %>
  <% end %>
<% else %>
  <p class="text-danger">★<%= bookmark_post.bookmarks.count %>保存</p>
<% end %>