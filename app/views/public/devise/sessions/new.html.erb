<div class="text-center">
  <h1 class="h3 mt-3 font-weight-normal">サインインをどうぞ</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, placeholder: "メールアドレス", class: "form-control", autofocus: true, autocomplete: "email" %>
    <%= f.label :password, class: "sr-only" %><br />
    <%= f.password_field :password, placeholder: "パスワード", class: "form-control", autocomplete: "current-password" %>
    <% if devise_mapping.rememberable? %>
      <div class="form-check mb-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
        <p>状態を記憶する</p>
      </div>
    <% end %>
    <%= f.submit "サインイン", class: "btn-lg btn-flat-border btn-block" %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>