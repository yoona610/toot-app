<!--------- 投稿一覧画面 ------------>
<div class="container">
  <h3 class="mt-5 pl-3 mb-0 jp-font-classic font-weight-bold font-color-green">投稿一覧</h3>

  <div class="row">
    <div class="col-md-12">
      <hr class="border-bottom">
    </div>
  </div>


  <div class="d-flex flex-wrap">
    <% @latest_posts.each do |latest_post| %>
      <div style='width: 200px' class="card text-center mt-3 p-3 ml-4 mb-3">
        <%= latest_post.title %>
        <%= link_to post_path(latest_post) do %>
        <%= attachment_image_tag latest_post, :post_image, :fill, 150, 150, format: 'jpeg', class: 'm-2' %>
        <% end %>
        <p class="caption"><%= "#{latest_post.comments.count} コメント" %></p>
        <p class='en-font-pop mr-1 mt-2 mb-0'>by
          <%= link_to latest_post.user.name, user_path(latest_post.user), class: 'card-text text-wrap font-color-green jp-font-pop' %>
        </p>
      </div>
    <% end %>
  </div>


  <div class="row">
    <div class="mx-auto mb-5">
      <%#= paginate @latest_posts %>
    </div>
  </div>
</div>