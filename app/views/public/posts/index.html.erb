<!--------- 投稿一覧画面 ------------>
<div class="post-form">
  <div class="container">
    <% breadcrumb :latest_posts %>
    <p class="btn-sticky m-2">POST</p>
    <div class="dropdown mr-5">
      <button class="btn dropdown-toggle product-dropdown font-weight-bold"
      type="button" id="dropdownMenu1" data-toggle="dropdown"
      aria-haspopup="true" aria-expanded="false">
      <span class='product-dropdown'>カテゴリー検索</span>
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <%= link_to 'すべての投稿', posts_path, class: "dropdown-item" %>
        <% @categories.each do |category| %>
          <%= link_to category.name, category_index_path(word: category.name), class: "dropdown-item" %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <% @latest_posts.each do |latest_post| %>
        <div class="col-12 col-lg-3 col-md-4 col-sm-6">
          <div class="card text-center shadow bg-white rounded my-2">
            <p class="mt-2 font-weight-bold"><%= latest_post.title %></p>
            <%= link_to post_path(latest_post) do %>
              <%= attachment_image_tag latest_post, :post_image, :fill, 200, 200, format: 'jpeg', class: "post_img p-2" %>
            <% end %>
            <p class='mt-2 mb-2 font-weight-bold'>by
              <%= link_to latest_post.user.name, user_path(latest_post.user), class: 'card-text text-wrap' %>
            </p>
          </div>
        </div>
      <% end %>
    </div>

    <div class="row">
      <div class="mx-auto mb-5">
        <%= paginate @latest_posts %>
      </div>
    </div>
  </div>
</div>