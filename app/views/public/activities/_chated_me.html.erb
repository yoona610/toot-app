<% if activity.read == "unread" %>
  <div class="activity_unread border border-secondary">
    <%= link_to read_activity_path(activity), class: "list-group-item-light #{'read' if activity.read?}", method: :patch do %>
      <p class="m-0">管理者がチャットしました<%= l activity.created_at, format: :short %></p>
    <% end %>
  </div>
<% else %>
  <div class="activity_read border border-secondary">
    <%= link_to read_activity_path(activity), class: "list-group-item-light #{'read' if activity.read?}", method: :patch do %>
      <p class="m-0">管理者がチャットしました<%= l activity.created_at, format: :short %></p>
    <% end %>
  </div>
<% end %>