<div class="container">
  <p class="btn-sticky m-2">ACTIVITY</p>

  <div class="mx-auto">
    <h3 class="text-center">通知一覧</h3>
  </div>

  <div class="row">
    <div class="col-md-4 offset-md-8">
      <% if @activities_count != 0 %>
        <h6 class="text-right mr-5"><i class="fas fa-check-circle"></i> <%= @activities_count %></h6>
      <% end %>
    </div>
  </div>


  <% if @activities.present? %>
    <% @activities.each do |activity| %>
      <div class="text-center activity-width">
        <%= render "#{activity.action_type}", activity: activity %>
      </div>
    <% end %>
    <div class="row">
      <div class="mx-auto mb-5">
        <%= paginate @activities %>
      </div>
    </div>
  <% else %>
    <div class="text-center">
      お知らせはありません
    </div>
  <% end %>
</div>