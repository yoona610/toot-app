<div class="container">
  <p class="btn-sticky m-2">ACTIVITY</p>

  <div class="mx-auto">
    <h3 class="text-center">通知一覧</h3>
  </div>

  <% if @activities_count.count != 0 %>
    <%= @activities_count.count %>
  <% end %>


  <% if @activities.present? %>
    <% @activities.each do |activity| %>
      <div class="text-center activity-width">
        <%= render "#{activity.action_type}", activity: activity %>
      </div>
    <% end %>
  <% else %>
    <div class="text-center">
      お知らせはありません
    </div>
  <% end %>
</div>