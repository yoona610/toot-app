<!--マイページ（会員編集ページ）-->
<div class="container">
  <% breadcrumb :user_edit, @user %>
  <p class="btn-sticky m-2">PROFILE EDITING</p>
  <div class="row ml-2">
    <%= form_with model: @user, local:true do |f| %>
      <div class="form-group mt-2">
        <%= f.label :profile_image, 'プロフィール写真:', class: 'mb-1 font-weight-bold' %><br />
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpg', fallback: 'no_image.jpg', size: '100x100', class: 'rounded-circle mr-3' %>
        <%= f.attachment_field :profile_image %>
      </div>

      <div class="form-group mt-4">
        <%= f.label :name, 'ユーザー名:', class: 'mb-1 font-weight-bold' %><br />
        <%= f.text_field :name, class:'form-control', size: "40" %>
        <%= render 'layouts/error_messages', obj: @user, column: :name %>
      </div>

      <div class="form-group mt-4">
        <%= f.label :introduction, '自己紹介:', class: 'mb-1 font-weight-bold' %><br />
        <%= f.text_area :introduction, class: 'form-control', size: "40x3" %>
        <%= render 'layouts/error_messages', obj: @user, column: :introduction %>
      </div>

      <div>
        <p class='mb-1 mr-1 pt-1 font-weight-bold'>メールアドレス:</p>
        <%= @user.email %>
      </div>

      <div class="form-group pt-3 mt-3 mb-4">
        <%= f.submit '変更', class: 'btn-flat-border px-3' %>
        <%= link_to "退会する", users_unsubscribe_path, class: 'btn-flat-border ml-4' %>
      </div>
    <% end %>
  </div>
</div>
