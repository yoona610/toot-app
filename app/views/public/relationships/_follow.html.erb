<%= link_to follows_user_path(user) do %>
  <h6>フォロー <%= user.following_user.count %></h6>
<% end %>
<%= link_to followers_user_path(user) do %>
  <h6>フォロワー <%= user.follower_user.count %></h6>
<% end %>
<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to 'Unfollow', user_relationships_path(user.id), method: :delete, remote: true, class: "btn-flat-border" %>
  <% else %>
    <%= link_to 'Follow', user_relationships_path(user.id), method: :post, remote: true, class: "btn-flat-border" %>
  <% end %>
<% end %>