<%= link_to follows_user_path(user) do %>
  <h6>フォロー<%= user.following_user.count %></h6>
<% end %>
<%= link_to followers_user_path(user) do %>
  <h6>フォロワー<%= user.follower_user.count %></h6>
<% end %>
<% if current_user.following?(user) %>
  <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, remote: true, class: "btn-sm btn-danger" %>
<% else %>
  <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, remote: true, class: "btn-sm btn-success" %>
<% end %>