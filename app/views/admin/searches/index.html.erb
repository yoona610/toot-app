<div class="container">
  <p class="btn-sticky m-2">SEARCH</p>
  <% if @model == 'user' %>
    <h3 class="mt-5 pl-3 mb-0 font-weight-bold">SEARCH(USER)<%= @content %></h3>
    <div class="row">
      <div class="col-md-12">
        <hr class="border-bottom">
      </div>
    </div>
    <div class="d-flex flex-wrap">
      <%= render 'admin/users/index', users: @records %>
    </div>
  <% elsif @model == 'post' %>
    <h3 class="mt-5 pl-3 mb-0 font-weight-bold">SEARCH(POST)<%= @content %></h3>
    <div class="row">
      <div class="col-md-12">
        <hr class="border-bottom">
      </div>
    </div>
    <div class="d-flex flex-wrap">
      <%= render 'admin/posts/index', latest_posts: @records %>
    </div>
  <% end %>
</div>