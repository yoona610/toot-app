<!---------------- 管理者(会員詳細) ------------------>

<div style="height: 650px", class="d-flex align-items-center">
  <div class="container">
    <h3><%= @user.name %>さんの会員情報</h3>

    <table style='width:75%' class="table mt-5">
      <tr>
        <td style="width:25%", class="font-weight-bold">ユーザー名</td>
        <td class="ml-3"><%= @user.name %></td>
      </tr>
      <tr>
        <td style="width:25%", class="font-weight-bold">自己紹介</td>
        <td class="ml-3"><%= @user.introduction %></td>
      </tr>
      <tr>
        <td style="width:25%", class="font-weight-bold">メールアドレス</td>
        <td class="ml-3"><%= @user.email %></td>
      </tr>
      <tr>
        <td style="width:25%", class="font-weight-bold">会員ステータス</td>
          <% if @user.is_deleted == false %>
            <td class="ml-3 active_color"><%= @user.deleted_status %></td>
          <% else %>
            <td class="ml-3 inactive_color"><%= @user.deleted_status %></td>
          <% end %>
      </tr>
    </table>

    <div class="d-flex mt-5 ml-2">
      <%= link_to "会員ステータスを編集", edit_admin_user_path(@user.id), class: 'btn-flat-border' %>
      <%= link_to "戻る", admin_users_path, class: 'btn-flat-border ml-4' %>
    </div>

  </div>
</div>