<div class="text-center">
    <!--<img class="mb-4" src="../images/bootstrap-solid.svg" alt="" width="72" height="72">-->
    <h1 class="h3 mt-3 font-weight-normal">サインインをどうぞ</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
      <%= f.label :email, class: "sr-only" %><br />
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      <%= f.label :password, class: "sr-only" %><br />
      <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
          <p>状態を記憶する</p>
        </div>
      <% end %>
      <%= f.submit "サインイン", class: "btn btn-lg btn-primary btn-block" %>
      <%= link_to "ゲストログイン（管理者）", admin_guest_sign_in_path, method: :post, class: "btn btn-lg btn-outline-primary btn-block" %>
    <% end %>
  <%= render "devise/shared/links" %>
</div>