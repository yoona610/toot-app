<!----------- 管理者側：チャット問い合わせ -------------->
<div class="container">

  <div class="row mt-5">
    <div class="mx-auto">
      <h3 class="jp-font-classic text-center">お問い合わせ</h3>
    </div>
  </div>

  <div class="add-chat-bubble">
    <%= render partial: 'chat_bubbles', locals: { chats: @chats, user: @user } %>
  </div>

  <!--チャットメッセージ投稿フォーム-->
  <div class="mt-1 mx-auto">
    <div>
      <%= form_with model: [:admin, @chat], class: "text-center", remote: true do |f| %>
        <%= f.text_area :message, size: '45x4', placeholder: "メッセージを入力", class: 'p-3 clear-form' %>
        <%= f.hidden_field :chat_room_id %>
        <%= f.hidden_field :is_admin, value: true %>
    </div>
    <div class="text-center">
        <%= f.submit "送信", class: 'btn btn-lg btn-outline-primary' %>
      <% end %>
    </div>
  </div>

</div>