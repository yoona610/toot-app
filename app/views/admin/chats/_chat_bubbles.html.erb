<!----------- 管理者側：チャット内容の部分テンプレート -------------->
  <div class="row mt-3 mb-5">
    <div class="chat-area mx-auto">
      <% chats.each do |chat| %>
        <!--管理者(admin)のチャット内容-->
        <% if chat.admin_id != nil %>
          <div class="text-right mt-4 balloon_l">
            <div class="faceicon">
              <span><%= chat.created_at %></span>
              <span class="ml-2 font-weight-bold">管理者</span>
            </div>
            <div class="chat-bubble text-left says">
              <%= chat.message %>
            </div>
          </div>
        <!--顧客(user)のチャット内容-->
        <% elsif chat.user_id == user.id %>
          <div class="mt-4 balloon_r">
            <div class="faceicon">
              <span class="ml-md-3 ml-sm-1 font-weight-bold"><%= chat.user.name %></span>
              <span class="ml-3"><%= chat.created_at %></span>
            </div>
            <div class="chat-bubble receiver-chat-bubble says">
              <%= chat.message %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>