<div class="container">

  <p class="btn-sticky m-2">CHATS</p>
  <div class="row">
    <div class="mx-auto">
      <h4 class="mt-5 py-2">お問い合わせ一覧</h4>
    </div>
  </div>

  <div class="row mt-3 table-responsive">
    <table class="table table-borderless text-nowrap mx-auto">
      <% @chats.each do |chat| %>
        <% if chat.user != nil %>
        <tr class="mt-5 border-bottom">
          <td class='col-lg-3 align-middle text-center'>
            <%= chat.created_at.to_s(:datetime_jp) %>
          </td>
          <td class="col-lg-2 align-middle text-center">
            <%= link_to (attachment_image_tag chat.user, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg", size: '100x100', class: 'rounded-circle'), admin_user_path(chat.user.id) %>
          </td>
          <td class="col-lg-2 align-middle text-center">
            <%= link_to chat.user.name, admin_user_path(chat.user.id) %>
          </td>
          <td class="col-lg-2 align-middle text-center">
            <%= chat.chat_room.response_status_sring %>
          </td>
          <td class="col-lg-3 align-middle text-center">
            <%= link_to "CHAT", admin_chat_path(chat.user.id), class: 'btn btn-sm btn-outline-secondary' %>
          </td>
        </tr>
        <% end %>
      <% end %>
    </table>
  </div>

  <div class="row">
    <div class="mx-auto mt-4 mb-5">
      <%= paginate @chats %>
    </div>
  </div>

</div>