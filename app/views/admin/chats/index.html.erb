<div class="container">

  <p class="btn-sticky m-2">CHATS</p>
  <div class="mx-auto">
    <h4 class="mx-auto mt-5 py-2 pl-4">お問い合わせ一覧（チャット）</h4>
  </div>

  <div class="row mt-3">
    <table class="table table-borderless mx-auto">
      <% @chats.each do |chat| %>
        <% if chat.user != nil %>
        <tr class="mt-5 border-bottom">
          <td style="width: 20%" class='mb-2'>
            <%= chat.created_at %>
          </td>
          <td style="width: 20%" class="py-0 align-middle text-left">
            <%= link_to chat.user.name, admin_user_path(chat.user.id) %>
          </td>
          <td style="width: 20%" class="py-0 align-middle text-left">
            <%= link_to chat.user.name, admin_user_path(chat.user.id) %>
          </td>
          <td style="width: 20%" class="py-0 align-middle text-left">
            <%= chat.chat_room.response_status_sring %>
          </td>
          <td style="width: 20%" class="pt-1 pb-1 align-middle text-center">
            <%= link_to "チャットへ", admin_chat_path(chat.user.id), class: 'btn-flat-border btn-md' %>
          </td>
        </tr>
        <% end %>
      <% end %>
    </table>
  </div>

  <div class="row">
    <div class="mx-auto mt-4 mb-5">
    <%#= paginate @chats %>
    </div>
  </div>

</div>